<table>
  <tr>
    <th colspan="3">Test</th>
  </tr>
  <tr>
    <td>Title</td>
    <td colspan="2"><%= @test.title %></td>
  </tr>
  <tr>
    <td>Level</td>
    <td colspan="2"><%= @test.level %></td>
  </tr>
  <tr>
    <th colspan="3">Questions</th>
  </tr>
  <% for question in @test.questions %>
    <tr>
      <td><%= question.statement %></td>
      <td><%= link_to('edit', edit_question_path(question)) %></td>
      <td><%= link_to('delete', question, data: { confirm: 'Are you sure?' }, method: :delete) %></td>
    </tr>
 <% end %>
 <tr>
   <td colspan="3"><%= link_to('new question', new_test_question_path(@test)) %></td>
 </tr>
 <tr>
   <td colspan="3"><%= link_to('back', tests_path) %></td>
 </tr>
</table>
</table>
