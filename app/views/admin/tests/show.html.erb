<table>
  <tr>
    <th colspan="3">Test</th>
  </tr>
  <tr>
    <td>Title</td>
    <td colspan="2"><%= @test.title %></td>
  </tr>
  <tr>
    <td>Creator</td>
    <td colspan="2"><%= @test.creator.show_initials %></td>
  </tr>
  <tr>
    <td>Level</td>
    <td colspan="2"><%= @test.level %></td>
  </tr>
  <% if @test.has_timer? %>
    <tr>
      <td>Time limit</td>
      <td colspan="2"><%= @test.timer %> min</td>
    </tr>
  <% end %>
  <tr>
    <th colspan="3">Questions</th>
  </tr>
  <%= render @test.questions %>
  <tr>
    <td colspan="3"><%= link_to('new question', new_admin_test_question_path(@test)) %></td>
  </tr>
  <tr>
    <td colspan="3"><%= link_to('edit', edit_admin_test_path(@test)) %></td>
  </tr>
  <tr>
    <td colspan="3"><%= link_to('back', :admin_tests) %></td>
  </tr>
</table>
